@model Cadeteria.Entidades.Cliente
@{
    ViewData["Title"] = "RegistrarClienteForm";
}

<form asp-action="RegistrarCliente" method="post" class="w-50">
    <fieldset>
        <legend>REGISTRAR NUEVO CLIENTE</legend>
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control form-control-sm" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control form-control-sm" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control form-control-sm" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success btn-sm float-right">
            REGISTRAR
        </button>
    </fieldset>
</form>

