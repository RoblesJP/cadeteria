@model Cadeteria.ViewModels.ModificarPedidoViewModel

@{
    ViewData["Title"] = "ModificarPedidoForm";
}

<h1>ModificarPedidoForm</h1>

<h4>RegistrarPedidoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificarPedido" method="post">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" asp-items="@Model.clientesSelectListItem" class="custom-select custom-select-sm"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCadete" class="control-label"></label>
                <select asp-for="IdCadete" asp-items="@Model.cadetesSelectListItem" class="custom-select custom-select-sm"></select>
                <span asp-validation-for="IdCadete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="custom-select custom-select-sm">
                    <option value="1">Express</option>
                    <option value="2">Delicado</option>
                    <option value="3">Ecologico</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="custom-select custom-select-sm">
                    <option value="1">Pendiente</option>
                    <option value="2">Entregado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control form-control-sm" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TieneCuponDeDescuento" /> @Html.DisplayNameFor(model => model.TieneCuponDeDescuento)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

